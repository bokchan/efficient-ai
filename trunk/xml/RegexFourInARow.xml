<?xml version="1.0" encoding="UTF-8"?>
<expressions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="RegexExpression.xsd">
  <expression>
    <description>Vertical</description>
    <pattern>(VAR{1}[0-2]{6}){4}</pattern>
    <offsetY>4</offsetY>
    <offsetX>0</offsetX>
    <modMin>0</modMin>
    <modMax>6</modMax>
  </expression>
  <expression>
    <description>Horizontal</description>
    <pattern>VAR{4}</pattern>
    <offsetY>0</offsetY>
    <offsetX>0</offsetX>
    <modMin>0</modMin>
    <modMax>3</modMax>
  </expression>
    <expression>
    <description>Diagonal increasing</description>
    <pattern>(VAR{1}[0-2]{7}){4,}</pattern>
    <offsetY>4</offsetY>
    <offsetX>4</offsetX>
    <modMin>0</modMin>
    <modMax>3</modMax>
  </expression>
  <expression>
    <description>Diagonal decreasing</description>
    <pattern>(VAR{1}[0-2]{5}){4,}</pattern>
    <offsetY>4</offsetY>
    <offsetX>-4</offsetX>
    <modMin>3</modMin>
    <modMax>6</modMax>
  </expression>
</expressions>